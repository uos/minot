{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Minot",
  "scopeName": "source.mt",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#paths" },
    { "include": "#keywords" },
    { "include": "#booleans" },
    { "include": "#function-calls" },
    { "include": "#quantities" },
    { "include": "#numbers" },
    { "include": "#types" },
    { "include": "#namespace-accessor" },
    { "include": "#internal-variables" },
    { "include": "#variables" },
    { "include": "#operators" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign",
          "match": "(#[^\\n]*)$"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape",
          "match": "\\\\."
        }
      ]
    },
    "paths": {
      "name": "string.other.link",
      "match": "\\.?\\/+[^\\n\\s]*"
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control",
          "match": "\\b(if)\\b"
        },
        {
          "name": "keyword.other",
          "match": "\\b(LOG)\\b"
        }
      ]
    },
    "booleans": {
      "name": "constant.language.boolean",
      "match": "\\b(true|false)\\b"
    },
    "function-calls": {
      "name": "entity.name.function",
      "match": "\\b(pf|reset|rule)!"
    },
    "quantities": {
      "name": "constant.numeric.quantity",
      "match": "\\b[+-]?(\\d+\\.\\d*|\\.\\d+|\\d+)(mm|m|cm|s|ms|mins?|hours?)\\b"
    },
    "numbers": {
      "name": "constant.numeric",
      "match": "\\b[+-]?(\\d+\\.\\d*|\\.\\d+|\\d+)\\b"
    },
    "types": {
      "name": "entity.name.type",
      "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
    },
    "namespace-accessor": {
      "name": "entity.name.namespace",
      "match": "\\b[a-zA-Z_:][a-zA-Z_:\\d]*(?=\\s*\\.)"
    },
    "internal-variables": {
      "name": "variable.language",
      "match": "\\b_[a-zA-Z_:\\d]+\\b"
    },
    "variables": {
      "name": "variable.other",
      "match": "\\b[a-zA-Z:][a-zA-Z_:\\d]*\\b"
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment",
          "match": "<-|->|="
        },
        {
          "name": "keyword.operator.comparison",
          "match": "=="
        },
        {
          "name": "keyword.operator.range",
          "match": "\\.\\."
        },
        {
          "name": "keyword.operator.arithmetic",
          "match": "[+-]"
        },
        {
          "name": "keyword.operator",
          "match": "~"
        },
        {
          "name": "punctuation.separator.comma",
          "match": ","
        },
        {
          "name": "punctuation.accessor",
          "match": "\\."
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.definition.block",
          "match": "[{}]"
        },
        {
          "name": "punctuation.definition.array",
          "match": "[\\[\\]]"
        },
        {
          "name": "punctuation.definition.parameters",
          "match": "[()]"
        }
      ]
    }
  }
}