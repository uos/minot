{
  "name": "minot",
  "displayName": "Minot",
  "description": "Minot Language Support for Visual Studio Code with basic commands for bagfile publishing and syntax highlighting.",
  "version": "0.3.0",
  "engines": {
    "vscode": "^1.105.0",
    "minot": "0.3.0"
  },
  "icon": "assets/minot-icon.png",
  "publisher": "stelzo",
  "repository": {
    "type": "git",
    "url": "https://github.com/uos/minot.git"
  },
  "license": "(MIT OR Apache-2.0)",
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "mt",
        "aliases": ["Minot", "mt"],
        "extensions": [".mt", ".minot"],
        "configuration": "./mt.configuration.json"
      }
    ],
    "commands": [
      {
        "command": "minot.run",
        "title": "Minot: Run Selection"
      },
      {
        "command": "minot.toggleLock",
        "title": "Minot: Toggle Lock"
      },
      {
        "command": "minot.unlock",
        "title": "Minot: Unlock",
        "enablement": "false"
      },
      {
        "command": "minot.lock",
        "title": "Minot: Lock",
        "enablement": "false"
      },
      {
        "command": "minot.step",
        "title": "Minot: Step"
      },
      {
        "command": "minot.clearRules",
        "title": "Minot: Clear Rules"
      },
      {
        "command": "minot.restart",
        "title": "Minot: Restart Server"
      }
      ,
      {
        "command": "minot.stop",
        "title": "Minot: Stop Server"
      }
    ],
    "keybindings": [
      {
        "key": "ctrl+.",
        "command": "minot.toggleLock",
        "when": "editorTextFocus"
      },
      {
        "key": "ctrl+;",
        "command": "minot.step",
        "when": "editorTextFocus"
      },
      {
        "key": "ctrl+shift+enter",
        "command": "minot.run",
        "when": "editorTextFocus"
      }
    ],
    "grammars": [
      {
        "language": "mt",
        "scopeName": "source.mt",
        "path": "./syntaxes/mt.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
